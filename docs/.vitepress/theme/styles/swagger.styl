  color: #e2e8f0;
}

html.dark #swagger-ui .prop-type {
  color: #a78bfa;
  font-weight: 500;
}

html.dark #swagger-ui .prop-format {
  color: #fbbf24;
}

html.dark #swagger-ui .prop-name {
  color: #ffffff;
  font-weight: 500;
}

